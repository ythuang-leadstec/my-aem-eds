{
  "definitions": [
    {
      "title": "Button",
      "id": "button",
      "plugins": {
        "xwalk": {
          "page": {
            "resourceType": "core/franklin/components/block/v1/block",
            "template": {
              "name": "Button",
              "filter": "button",
              "model": "button"
            }
          }
        }
      }
    }
  ],
  "models": [
    {
      "id": "button",
      "fields": [
        {
          "component": "boolean",
          "label": "Shall the text field be revealed?",
          "name": "reveal",
          "valueType": "boolean"
        },
        {
          "component": "text-input",
          "label": "Hidden text field",
          "name": "hidden-text",
          "valueType": "string",
          "condition": {
            "===": [
              {
                "var": "reveal"
              },
              true
            ]
          }
        },
        {
          "component": "select",
          "name": "buttonStyle",
          "label": "Button Style",
          "options": [
            {
              "name": "Primary-m",
              "value": "primary-m"
            },
            {
              "name": "Secondary-m",
              "value": "secondary-m"
            },
            {
              "name": "Secondary-s",
              "value": "secondary-s"
            },
            {
              "name": "Icon",
              "value": "icon"
            },
            {
              "name": "Text With Icon",
              "value": "text-icon"
            }
          ]
        },
        {
          "component": "reference",
          "name": "icon",
          "label": "Icon (Select SVG file, only for Icon/Text With Icon styles)",
          "value": "",
          "accept": "image/svg+xml",
          "condition": {
            "or": [
              { "===": [ { "var": "buttonStyle" }, "icon" ] },
              { "===": [ { "var": "buttonStyle" }, "text-icon" ] }
            ]
          }
        },
        {
          "component": "text",
          "name": "buttonLabel",
          "label": "Button Label"
        },
        {
          "component": "text",
          "name": "buttonLink",
          "label": "Button Link"
        },
        {
          "component": "select",
          "name": "buttonPosition",
          "value": "",
          "label": "Button Position",
          "options": [
            {
              "name": "Align Left (Default)",
              "value": "is-align-left"
            },
            {
              "name": "Align Center",
              "value": "is-align-center"
            },
            {
              "name": "Align Right",
              "value": "is-align-right"
            }
          ]
        }
      ]
    }
  ],
  "filters": [
    {
      "id": "button",
      "components": [
        "button"
      ]
    }
  ]
}